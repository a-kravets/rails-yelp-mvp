<h1><%= @restaurant.name %></h1>
<p>Food: <%= @restaurant.category %></p>
<p>Address: <%= @restaurant.address %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>
<h2>Reviews</h2>
<% @restaurant.reviews.each do |review| %>
<p><%= review.content %></p>
<p><%= review.rating %></p>
<% end %>


<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>



<p><%= link_to "Back to restaurants page", restaurants_path %> | <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></p>

